<table class="table is-fullwidth">
  <thead>
    <th>Amount</th>
    <th>Method donated</th>
    <th>Donor</th>
    <th>Candidate</th>
    <th>Image</th>
  </thead>
  <tbody>
    {{#each whereabouts}}
      <tr>
        <td>{{amount}}</td>
        <td>{{method}}</td>
        <td> {{donor.firstName}} {{donor.lastName}} </td>
        <td>{{candidate.lastName}}, {{candidate.firstName}}</td>
        <td>{{> playlist-image }}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<div class="box">
  <div class="title is-5"> Total:  {{total}} </div>
</div>
